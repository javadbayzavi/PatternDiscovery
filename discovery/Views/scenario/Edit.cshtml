@model discovery.Models.scenario

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Scenario</h3>
        <a href="~/scenario"> <span class="fa fa-fast-backward fa-backward float-right"></span></a>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form action="~/scenario/Edit" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="text" class="control-label"> Name: </label>
                <div class="col">
                    @Html.TextBoxFor(model => model.name, "", new { @class = "form-control" })
                    <span asp-validation-for="text" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="category" class="control-label">Method: </label>
                <div class="col">
                    @Html.DropDownList("method", null, "Select one item from the list", new { @class = "formm-control" })
                    <span asp-validation-for="method" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="category" class="control-label">Source Type: </label>
                <div class="col">
                    @Html.DropDownList("sourcetype", null, "Select one item from the list", new { @class = "formm-control" })
                    <span asp-validation-for="sourcetype" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


