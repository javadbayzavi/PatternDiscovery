        for (let index = 0; index < chartData.length; index++)
        {
            //Caculation of others
            if (index > 5) {
                if (index == 6) {
                    barLabels.push("Others");
                    barData.push(chartData[index].count);
                }
                else
                    barData[6] += chartData[index].count;
            }
            else {
                barLabels.push(chartData[index].pattern);
                //barLabels.push("'" + chartData[index].pattern + "'");
                barData.push(chartData[index].count);
            }
        }
    }
