@*Scenario checking reaction*@
@if ((bool)ViewBag.currentScenario)
{
    <div id="infomodal" class="modal" tabindex="-1" role="dialog" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Text analyzer</h5>
                </div>
                <div class="modal-body">
                    <p>There is no active scenario. First refer to Scenarios and start one scenario from the list</p>
                </div>
                <div class="modal-footer">
                    @Html.ActionLink("Scenario List", "Index", "scenario")
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#infomodal').modal(null)
    </script>
}
<script src="~/scripts/plugins/chart.js/Chart.min.js"></script>

<div class="card card-info">
    <div class="card-header card-info">
        <h3>
            Result dashboard
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                @Html.PartialAsync("getPatternRanking.cshtml")
            </div>
            <div class="col-md-6 col-sm-12">
                @Html.PartialAsync("getCategoryRanking.cshtml")

            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6 col-sm-12">
                @Html.PartialAsync("percentageOfWholePatterns.cshtml")
            </div>
            <div class="col-md-6 col-sm-12">
                @Html.PartialAsync("percentageOfCategoryPattern.cshtml")
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12">
                @Html.PartialAsync("getAuthorInterestPatterns.cshtml")
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12">
                @Html.PartialAsync("getRankofPatternsInCategory.cshtml")
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12">
                @Html.PartialAsync("getYearlyPatterns.cshtml")
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12">
                @Html.PartialAsync("getMonthlyPatterns.cshtml")
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12">
                @Html.PartialAsync("getMostDiverseSubject.cshtml")
            </div>
        </div>
    </div>
</div>
