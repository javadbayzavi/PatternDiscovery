@model discovery.Models.dataset

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Dataset</h3>
        <a href="~/dataset/List"> <span class="fa fa-fast-backward fa-backward float-right"></span></a>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form action="~/dataset/Edit" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="text" class="control-label"> Title: </label>
                <div class="col">
                    @Html.TextBoxFor(model => model.subject, "", new { @class = "form-control" })
                    <span asp-validation-for="text" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="text" class="control-label"> Author: </label>
                @Html.TextBoxFor(model => model.author, "", new { @class = "form-control" })
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="text" class="control-label"> Date: </label>
                @Html.TextBoxFor(model => model.date, "", new { @class = "form-control" })
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="text" class="control-label"> Body: </label>
                @Html.TextAreaFor(model => model.body, 7, 50, new { @class = "form-control" })
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


