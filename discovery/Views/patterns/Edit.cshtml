@model discovery.Models.patterns

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Pattern</h3>
        <a href="~/patterns"> <span class="fa fa-fast-backward fa-backward float-right"></span></a>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form action="~/patterns/Edit" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="text" class="control-label"> Title: </label>
                @Html.TextBoxFor(model => model.title)
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="category" class="control-label">Category: </label>
                @Html.DropDownList("category", null, "Select one item from the list")
                @*<input asp-for="category" class="form-control" />*@
                <span asp-validation-for="category" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input type="submit" value="update" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>


